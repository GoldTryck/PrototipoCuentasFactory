<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.Controller.MainController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
            <Menu mnemonicParsing="false" text="Cuentas Factory">
               <items>
                  <MenuItem fx:id="ocultar" mnemonicParsing="false" text="Ocultar" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="salir" mnemonicParsing="false" text="Salir" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Registrar">
              <items>
              <Menu mnemonicParsing="false" text="Cuentas de usuario">
                <items>
                  <MenuItem fx:id="abrir" mnemonicParsing="false" text="Cargar listado..." />
                  <Menu mnemonicParsing="false" text="Abrir reciente..." />
                </items>
              </Menu>
                  <MenuItem fx:id="grupo" mnemonicParsing="false" text="Grupo" />
              </items>
            </Menu>
        <Menu mnemonicParsing="false" text="Ayuda">
               <items>
            <MenuItem mnemonicParsing="false" text="Sobre Cuentas Factory ..." />
               </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane fx:id="content" VBox.vgrow="ALWAYS" />
  </children>
</VBox>
